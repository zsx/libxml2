<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" UpgradeCode="{01003782-2FEF-4217-8CBD-D139BECA078E}" Version="@VERSION@.0" Language="1033" Name="libxml2" Manufacturer="Free Software">
		<Package InstallerVersion="300" Compressed="yes" InstallScope="perMachine"
				Description="libXML2 for the OAH Build System"
				Manufacturer="Free Software" />
		<Media Id="1" Cabinet="libxml2_dev_installer.cab" EmbedCab="yes" />

		<Property Id="OAH_BUILD_PRODUCT_DIR">
			<RegistrySearch Id="OAHBuildProductDir"
							Root="HKLM" Key="SOFTWARE\OAH Build" Name="ProductDir"
							Type="raw" />
		</Property>

		<Property Id="FOSS_PRODUCT_DIR">
			<RegistrySearch Id="FOSSProductDir"
							Root="HKLM" Key="SOFTWARE\Free Software" Name="ProductDir"
							Type="raw" />
		</Property>

		<Condition Message="OAH Build was not found. You need to install OAH Build before installing [ProductName].">
			<![CDATA[Installed OR OAH_BUILD_PRODUCT_DIR]]>
		</Condition>

		<Condition Message="OAH Build was found, but where to install FOSS components is unknown. You need to reinstall OAH Build before installing [ProductName].">
			<![CDATA[Installed OR FOSS_PRODUCT_DIR]]>
		</Condition>

		<!-- Directory structure -->
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="FOSS_PRODUCT_DIR">
				<Merge Id='libxml2' Language='1033' SourceFile='Win32\libxml2.msm' DiskId='1' />
				<Merge Id='libxml2Dev' Language='1033' SourceFile='Win32\libxml2-dev.msm' DiskId='1' />

				<Directory Id="ModuleRedist" Name="redist">
					<Component Id="libxml2DevRedist" Guid="{AEFBE39C-D08F-4d64-9F9C-193AA2AF359C}">
						<File Id="libxml2_dev.msm" Source="Win32\libxml2-dev.msm" />
					</Component>
				</Directory>
			</Directory>
		</Directory>

		<Feature Id="Binaries" Title="libxml2 Binaries" Level="1">
			<MergeRef Id='libxml2' />
		</Feature>

		<Feature Id="libxml2Dev" Title="libxml2 .h, .lib, .pc and redist files" Level="1">
			<MergeRef Id='libxml2Dev' />
			<ComponentRef Id="libxml2DevRedist" />
		</Feature>
	</Product>
</Wix>